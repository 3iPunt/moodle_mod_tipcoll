{{!
  @template mod_tipcoll/deletegroup_modal


}}
<div class="modal fade" id="deleteGroup-{{ id }}" tabindex="-1" role="dialog" aria-labelledby="deleteGroup-{{ id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{# str }} delete_group, mod_tipcoll {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 class="quiz">{{# str }} delete_group_quiz, mod_tipcoll {{/str}}</h4>
                <h5 class="groupname">{{ name }}</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    {{# str }} cancel, mod_tipcoll {{/str}}
                </button>
                <button type="button" class="btn btn-primary" data-action="delete-group" data-groupid="{{ id }}">
                    {{# str }} delete_group, mod_tipcoll {{/str}}
                </button>
            </div>
        </div>
    </div>
</div>