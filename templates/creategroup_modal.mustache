{{!
  @template mod_tipcoll/creategroup_modal


}}
<div class="modal fade" id="createGroup" tabindex="-1" role="dialog" aria-labelledby="createGroupLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{# str }} create_new_group, mod_tipcoll {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-create-group">
                    <div class="form-group">
                        <label for="name">{{# str }} create_new_group_name, mod_tipcoll {{/str}}</label>
                        <input data-input="group-name-create" type="text" class="form-control" id="name" placeholder="{{# str }} create_new_group_name_placeholder, mod_tipcoll {{/str}}">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    {{# str }} cancel, mod_tipcoll {{/str}}
                </button>
                <button type="button" class="btn btn-primary" disabled data-action="create-group">
                    {{# str }} create_new_group, mod_tipcoll {{/str}}
                </button>
            </div>
        </div>
    </div>
</div>